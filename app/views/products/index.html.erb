<h1>Products:</h1>

<% if @products.any? %>
  <ul>
    <% @products.each do |product| %>
      <li><%= link_to product.name, product_path(product) %></li>
    <% end %>
  </ul>
  <h2>Three Most Recent Products</h2>
<% else %>
  <p>There are no products yet.</p>
<% end %>

<p><%= link_to "Add a product", new_product_path %></p>
